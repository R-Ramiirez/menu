<resources>
    <style name="MenuButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_menu_button</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CalipsoButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="AmarilloVerdosoButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#000000</item> <!-- Texto negro para mejor contraste -->
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>