<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="15dp"
    android:background="@drawable/gradient_background">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:src="@drawable/dialogo"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:text="Elige un rango de edad:"
            android:textSize="31dp"
            android:textColor="#834497"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    </FrameLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/gato"
        android:layout_gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">

        <!-- Sombra -->
        <View
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_shadow"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <!-- Botón real -->
        <Button
            android:id="@+id/btnPrimer"
            style="@style/StartActivityButton"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:text="Menos de 6 años"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">

        <!-- Sombra -->
        <View
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_shadow"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <!-- Botón real -->
        <Button
            android:id="@+id/btnSegundo"
            style="@style/StartActivityButton"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:text="6 A 10 AÑOS"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">

        <!-- Sombra -->
        <View
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_shadow"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <!-- Botón real -->
        <Button
            android:id="@+id/btnTercero"
            style="@style/StartActivityButton"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:text="11 A 14 AÑOS"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">

        <!-- Sombra -->
        <View
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_shadow"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <!-- Botón real -->
        <Button
            android:id="@+id/btnCuarto"
            style="@style/StartActivityButton"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:text="15 A 18 AÑOS"/>
    </FrameLayout>
</LinearLayout>